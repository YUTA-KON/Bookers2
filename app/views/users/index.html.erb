<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class = "mx-auto" style="text-align:center;"><%= link_to "ユーザ設定", edit_user_path(@user), class: 'nav-link' %></div>

      <%= form_with model: @newbook, local:true do |f| %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
          </div>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Opinion" %>
          <hr>
          <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u|%>
          <tr>
            <td><%= link_to user_path(u) do %>
              <%= attachment_image_tag u, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"; %>
            <% end %></td>
            <td><%= link_to user_path(u.id) do %>
              <%=u.name%>
            <% end %></td>
          </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</div>