<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/template', user: @user, newbook: @newbook %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u|%>
          <tr>
            <td><%= link_to user_path(u) do %>
              <%= attachment_image_tag u, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"; %>
            <% end %></td>
            <td><%= link_to user_path(u.id) do %>
              <%=u.name%>
            <% end %></td>
            <td><%= link_to "Show", user_path(u.id) %></td>
          </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</div>