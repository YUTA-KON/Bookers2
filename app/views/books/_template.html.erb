<div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <h2>New book</h2>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class = "mx-auto fas fa-user-cog" style="text-align:center;"><%= link_to "ユーザ設定", edit_user_path(user), class: 'nav-link' %></div>

      <%= form_with model: newbook, local:true do |f| %>
          <div class="input-group mb-3 mt-4">
            <div><p>Title</p></div>
            <%= f.text_field :title, class:"form-control"%>
          </div>
          <div><p>Opinion</p></div>
          <%= f.text_area :body, class:"form-control", rows:"3"%>
          <hr>
          <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
    </div>