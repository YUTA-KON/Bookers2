<div class="container px-5 px-sm-0">
  <div class = "row">
    <% if @newbook.errors.any? %>
      <%= @newbook.errors.count %>件のエラーが発生しました
      <% @newbook.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= render 'books/template', user: @user, newbook: @newbook %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |b|%>
          <tr>
            <td><%= link_to user_path(b.user_id) do %>
              <%= attachment_image_tag b.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"; %>
            <% end %></td>
            <td><%= link_to book_path(b.id) do %>
              <%=b.title%>
            <% end %></td>
            <td><%= b.body %></td>
          </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</div>